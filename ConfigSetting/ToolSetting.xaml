                        <GroupBox  Header="相机配置" BorderBrush="{DynamicResource ForegroundBrush}" Margin="0,5">
                            <StackPanel Margin="10,5"   >
                                <TextBlock Text="LED行列数"/>
                                <TextBlock Text="LED间距"/>
                                <TextBlock Text="LED高度"/>
                                <TextBlock Text="LED颜色Bit数"/>
                                <TextBlock Text="LED中心波长"/>
                                <TextBlock Text="照明模式最高刷新速率"/>
