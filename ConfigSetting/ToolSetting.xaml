                                <TextBlock Text="LED行列数"/>
                                <TextBlock Text="LED间距"/>
                                <TextBlock Text="LED高度"/>
                                <TextBlock Text="LED颜色Bit数"/>
                                <TextBlock Text="LED中心波长"/>
                                <TextBlock Text="照明模式最高刷新速率"/>
                                <TextBlock Text="照明最大数值孔径"/>
                                <TextBlock Text="照明亮度"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox  Header="固件升级" BorderBrush="{DynamicResource ForegroundBrush}" Margin="0,5">
                            <StackPanel Margin="10,5"  Height="140" >
    
                            </StackPanel>
                        </GroupBox>
                        <GroupBox  Header="软件升级" BorderBrush="{DynamicResource ForegroundBrush}" Margin="0,5">
                            <StackPanel Margin="10,5"  Height="140" >
         
                            </StackPanel>
                        </GroupBox>
                        <GroupBox  Header="系统配置" BorderBrush="{DynamicResource ForegroundBrush}" Margin="0,5">
                            <StackPanel Margin="10,5" Height="140"  >
                                <Button Content="主题"  Click="Button_Click"/>
                                <Button Content="向导"  Click="Button_Click_1"/>
                                <Button Content="自动校准"  Click="Button_Click_2"/>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox  Header="自动校准" BorderBrush="{DynamicResource ForegroundBrush}" Margin="0,5">
                            <StackPanel Margin="10,5"  Height="140" >
      
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>

            </Grid>

        </Border>


    </Grid>
</UserControl>
